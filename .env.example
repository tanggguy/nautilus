# =============================================================================
# NAUTILUS TRADING PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# BINANCE API CREDENTIALS
# -----------------------------------------------------------------------------
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Binance Testnet (for testing without real money)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# -----------------------------------------------------------------------------
# TRADING CONFIGURATION
# -----------------------------------------------------------------------------
# Environment: development, paper, live
TRADING_ENV=development

# Default venue
DEFAULT_VENUE=BINANCE

# Default instrument
DEFAULT_INSTRUMENT=BTCUSDT

# -----------------------------------------------------------------------------
# RISK MANAGEMENT
# -----------------------------------------------------------------------------
# Maximum position size (in base currency or percentage of capital)
MAX_POSITION_SIZE=0.1

# Maximum daily loss (percentage of capital)
MAX_DAILY_LOSS=0.05

# Maximum number of open positions
MAX_OPEN_POSITIONS=3

# Default stop loss percentage
DEFAULT_STOP_LOSS=0.02

# Default take profit percentage
DEFAULT_TAKE_PROFIT=0.04

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Max log file size (MB)
MAX_LOG_SIZE_MB=50

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# DATA STORAGE
# -----------------------------------------------------------------------------
# Directory for historical data
DATA_DIR=data

# Directory for backtest results
RESULTS_DIR=results

# Directory for optimization studies
OPTIMIZATION_DIR=optimization_studies

# -----------------------------------------------------------------------------
# DATABASE (Optional - for Optuna studies persistence)
# -----------------------------------------------------------------------------
# SQLite by default, can use PostgreSQL for production
DB_URL=sqlite:///optimization_studies/optuna.db

# PostgreSQL example (uncomment and configure if needed)
# DB_URL=postgresql://user:password@localhost:5432/nautilus_optuna

# -----------------------------------------------------------------------------
# NOTIFICATIONS (Optional)
# -----------------------------------------------------------------------------
# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email (for reports)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# -----------------------------------------------------------------------------
# OPTUNA OPTIMIZATION
# -----------------------------------------------------------------------------
# Default number of optimization trials
OPTUNA_N_TRIALS=100

# Optimization timeout (seconds, 0 = no timeout)
OPTUNA_TIMEOUT=3600

# Number of parallel jobs (-1 = use all CPU cores)
OPTUNA_N_JOBS=1

# -----------------------------------------------------------------------------
# BACKTEST CONFIGURATION
# -----------------------------------------------------------------------------
# Initial capital for backtests (USDT)
BACKTEST_INITIAL_CAPITAL=10000

# Backtest start date (YYYY-MM-DD)
BACKTEST_START_DATE=2023-01-01

# Backtest end date (YYYY-MM-DD)
BACKTEST_END_DATE=2024-12-31

# Bar aggregation for backtests (1-MINUTE, 5-MINUTE, 1-HOUR, etc.)
BACKTEST_BAR_TYPE=1-MINUTE

# -----------------------------------------------------------------------------
# PAPER TRADING
# -----------------------------------------------------------------------------
# Initial capital for paper trading (USDT)
PAPER_INITIAL_CAPITAL=10000

# Paper trading data provider (binance, binance_testnet)
PAPER_DATA_PROVIDER=binance_testnet

# -----------------------------------------------------------------------------
# LIVE TRADING (Use with extreme caution!)
# -----------------------------------------------------------------------------
# Enable live trading (set to 'true' only when ready!)
LIVE_TRADING_ENABLED=false

# Initial capital for live trading (USDT)
LIVE_INITIAL_CAPITAL=1000

# Live trading venue
LIVE_VENUE=BINANCE

# Live trading instruments (comma-separated)
LIVE_INSTRUMENTS=BTCUSDT

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
# Enable debug mode
DEBUG_MODE=false

# Profile performance
ENABLE_PROFILING=false
